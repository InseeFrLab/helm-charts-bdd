{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "kafka": {
      "description": "Kafka specific configuration",
      "type": "object",
      "properties": {
        "replicaCount": {
          "description": "Number of workers",
          "type": "integer",
          "default": 3
        },
        "persistence": {
          "description": "Configuration for persistence",
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Create a persistent volume",
              "default": true
            },
            "size": {
              "type": "string",
              "title": "Persistent volume size",
              "description": "Size of the persistent volume",
              "default": "10Gi",
              "form": true,
              "render": "slider",
              "sliderMin": 1,
              "sliderMax": 100,
              "sliderStep": 1,
              "sliderUnit": "Gi",
              "hidden": {
                "value": false,
                "path": "kafka/persistence/enabled"
              }
            }
          }
        }
      }
    },
    "discovery": {
      "description": "Database discovery",
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "title": "Enable discovery of this database",
          "description": "Allows clients to automatically preconfigure a connexion to this database",
          "default": true
        }
      }
    }
  }
}
